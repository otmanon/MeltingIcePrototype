function [N] = per_vertex_normals2D(V, S)
%PER_VERTEX_NORMALS2D Summary of this function goes here
%   Detailed explanation goes here
    edgeN = perEdgeNormals(V, S);
    vertN = zeros(size(V, 1), 2);
    vertN = vertN + edgeN(f);
    N = edgeN(S(:, 1), :) + [edgeN(S(:, 2), :)];
    N = N ./ 2;
    N = normalizerow(N);
